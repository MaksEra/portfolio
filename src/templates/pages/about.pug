                                    <circle class='inner-circle' r='35' cx='50' cy='50'/>
                                </svg>
                                span.about-me__circle-text CSS3    
                            li.about-me__circle-item
                                
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='outer-circle' stroke-dasharray="95, 158" ; r='25' cx='50' cy='50'/>
                                    <circle class='inner-circle' r='35' cx='50' cy='50'/>
                                </svg> 
                                span.about-me__circle-text JS<br>& jQuery   
